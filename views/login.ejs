<body>
  <%- include('layouts/navbar'); -%>
  <div id="center">
    <h3 style="text-align: center;"> Login </h3>
    <form name="admin_form" method="post" action="/login">

      <label>Username</label>
      <input type="text" name="username" autofocus><br />

      <label>Password</label>
